<h1>Users and their projects</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_projects.each do |user_project| %>
      <tr>
        <td><%= link_to user_project.user.username, user_project %></td>
        <td><%= link_to user_project.project.name, user_project %></td>
        <td><%= link_to 'Edit', edit_user_project_path(user_project), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', user_project, method: :delete, class:"btn btn-primary", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User project', new_user_project_path, class:"btn btn-primary" %>
